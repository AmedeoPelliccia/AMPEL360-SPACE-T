{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "K01 Evidence Pack Manifest",
  "type": "object",
  "properties": {
    "pack_id": {
      "type": "string"
    },
    "knot_id": {
      "type": "string",
      "pattern": "^K[0-9]{2}$"
    },
    "ata_codes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created_date": {
      "type": "string",
      "format": "date"
    },
    "version": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "Review",
        "Approved",
        "Submitted"
      ]
    },
    "evidence_items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "file_path": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          },
          "verification_status": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "pack_id",
    "knot_id",
    "version",
    "status"
  ]
}