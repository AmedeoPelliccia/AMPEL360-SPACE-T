{
  "agent_type": "CAE",
  "version": "1.1",
  "created": "2025-12-11",

  "profile": {
    "name": "CAE_Agent",
    "role": "Generative engineering analyst",
    "capabilities": [
      "requirements_analysis",
      "simulation_setup",
      "mesh_generation",
      "solver_execution",
      "post_processing",
      "compliance_checking"
    ]
  },

  "inputs": {
    "prompts_dir": "../PROMPTS/",
    "context_dir": "../CONTEXT/",
    "specs_dir": "../SPECS/",
    "allow_env_overrides": true,
    "allowed_file_types": ["yaml", "yml", "json", "txt", "md"],
    "max_file_size_mb": 25
  },

  "outputs": {
    "format": "native",
    "validation": true,
    "trace_links": true,
    "include_preview": true,
    "destination": "./OUTPUT/",
    "reports": {
      "summary": true,
      "detailed": true,
      "attachments": ["plots", "csv", "vtp"]
    }
  },

  "quality": {
    "min_confidence": 0.85,
    "compliance_check": true,
    "review_required": true
  },

  "analysis": {
    "domains": ["structural", "thermal", "modal"],
    "load_cases_required": true,
    "unit_system": "SI",
    "safety_factors": {
      "structural": 1.5,
      "thermal": 1.1
    }
  },

  "mesh": {
    "max_elements": 500000,
    "min_quality": 0.15,
    "auto_refine_contacts": true,
    "auto_refine_stress_risers": true,
    "element_types_allowed": ["tet", "hex"]
  },

  "solver": {
    "max_runtime_minutes": 120,
    "max_memory_gb": 32,
    "stability_checks": true,
    "retry_on_nonconvergence": 1
  },

  "validation_rules": {
    "schema_check": true,
    "geometry_constraints": [
      "no_self_intersections",
      "unit_consistency",
      "min_thickness_enforced"
    ],
    "analysis_constraints": [
      "boundary_conditions_complete",
      "loads_defined",
      "materials_assigned",
      "contacts_defined"
    ],
    "post_checks": [
      "convergence_reached",
      "residuals_below_threshold",
      "displacements_within_limits",
      "stresses_within_allowables"
    ],
    "on_fail": "stop"
  },

  "traceability": {
    "store_requirements_links": true,
    "store_prompt_checksums": true,
    "store_spec_checksums": true,
    "record_model_parameters": true,
    "store_solver_logs": true
  },

  "logging": {
    "level": "info",
    "destination": "logs/cae_agent.log",
    "request_id": true,
    "stdout": false
  },

  "review": {
    "required": true,
    "roles": ["lead_cae", "systems"],
    "checklist_ref": "../POLICIES/review_checklist.md"
  },

  "metadata": {
    "config_version": "1.1.0",
    "owners": ["systems", "cae"],
    "change_control": "changelog_required"
  }
}
