{
  "agent_type": "CAD",
  "version": "1.0",
  "created": "2025-12-11",

  "profile": {
    "name": "CAD_Agent",
    "role": "Generative engineering assistant",
    "capabilities": [
      "geometry_generation",
      "requirements_analysis",
      "compliance_checking"
    ]
  },

  "inputs": {
    "prompts_dir": "../PROMPTS/",
    "context_dir": "../CONTEXT/",
    "specs_dir": "../SPECS/",
    "allow_env_overrides": true,
    "allowed_file_types": ["yaml", "yml", "json", "txt", "md"],
    "max_file_size_mb": 25
  },

  "outputs": {
    "format": "native",
    "validation": true,
    "trace_links": true,
    "include_preview": false,
    "destination": "./OUTPUT/"
  },

  "quality": {
    "min_confidence": 0.85,
    "compliance_check": true,
    "review_required": true
  },

  "validation_rules": {
    "schema_check": true,
    "geometry_constraints": [
      "no_self_intersections",
      "unit_consistency",
      "min_thickness_enforced"
    ],
    "on_fail": "stop"
  },

  "traceability": {
    "store_requirements_links": true,
    "store_prompt_checksums": true,
    "store_spec_checksums": true,
    "record_model_parameters": true
  },

  "logging": {
    "level": "info",
    "destination": "logs/cad_agent.log",
    "request_id": true,
    "stdout": false
  },

  "review": {
    "required": true,
    "roles": ["lead_cad", "systems"],
    "checklist_ref": "../POLICIES/review_checklist.md"
  },

  "metadata": {
    "config_version": "1.0.1",
    "owners": ["systems", "cad"],
    "change_control": "changelog_required"
  }
}
