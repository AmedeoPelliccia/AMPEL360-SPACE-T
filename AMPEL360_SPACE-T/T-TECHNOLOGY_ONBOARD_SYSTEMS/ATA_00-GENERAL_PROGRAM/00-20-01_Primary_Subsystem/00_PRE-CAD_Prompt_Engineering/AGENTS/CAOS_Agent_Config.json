{
  "agent_type": "CAOS",
  "version": "1.2",
  "created": "2025-12-11",

  "profile": {
    "name": "CAOS_Agent",
    "role": "Operations and sustainment orchestrator",
    "capabilities": [
      "requirements_analysis",
      "task_coordination",
      "runbook_execution",
      "incident_triage",
      "change_management",
      "compliance_checking",
      "safety_guardrails"
    ]
  },

  "inputs": {
    "prompts_dir": "../PROMPTS/",
    "context_dir": "../CONTEXT/",
    "specs_dir": "../SPECS/",
    "runbooks_dir": "../RUNBOOKS/",
    "asset_inventory": "../INVENTORY/assets.yaml",
    "allow_env_overrides": true,
    "allowed_file_types": ["yaml", "yml", "json", "txt", "md"],
    "max_file_size_mb": 25
  },

  "outputs": {
    "format": "native",
    "validation": true,
    "trace_links": true,
    "include_preview": false,
    "destination": "./OUTPUT/",
    "reports": {
      "summary": true,
      "coordination_log": true,
      "incident_reports": true,
      "change_records": true
    }
  },

  "quality": {
    "min_confidence": 0.85,
    "compliance_check": true,
    "review_required": true
  },

  "operations": {
    "allowed_subtasks": ["CAD", "CAE", "docs", "compliance", "ops"],
    "max_parallel_tasks": 3,
    "handoff_requirements": [
      "clear_requirements_digest",
      "unit_system_consistency",
      "spec_refs_included",
      "runbook_ref_included"
    ],
    "maintenance_windows": ["Sat 02:00-04:00 UTC"],
    "slo_targets": {
      "uptime_pct": 99.5,
      "mttr_minutes": 60,
      "change_success_rate_pct": 97.0
    },
    "sla_ack_minutes": 10,
    "sla_restore_minutes": 120,
    "escalation_policy": {
      "tiers": ["ops_oncall", "systems", "compliance"],
      "max_hops": 2
    },
    "error_policy": "fail_fast_with_report"
  },

  "validation_rules": {
    "schema_check": true,
    "inputs_present": ["prompts_dir", "context_dir", "specs_dir", "runbooks_dir"],
    "analysis_constraints": [
      "boundary_conditions_if_applicable",
      "materials_assigned_if_required"
    ],
    "ops_constraints": [
      "runbook_exists_for_task",
      "rollback_defined_for_changes",
      "maintenance_window_respected"
    ],
    "post_checks": [
      "handoff_artifacts_complete",
      "tickets_created_if_incident",
      "change_record_logged_if_change"
    ],
    "on_fail": "stop"
  },

  "traceability": {
    "store_requirements_links": true,
    "store_prompt_checksums": true,
    "store_spec_checksums": true,
    "record_model_parameters": true,
    "store_coordination_steps": true,
    "store_change_ids": true,
    "store_incident_ids": true
  },

  "safety": {
    "forbidden_operations": ["unbounded_generation", "unsafe_materials", "unapproved_changes"],
    "max_runtime_minutes": 60,
    "max_memory_gb": 16
  },

  "logging": {
    "level": "info",
    "destination": "logs/caos_agent.log",
    "request_id": true,
    "stdout": false,
    "audit_mode": true
  },

  "review": {
    "required": true,
    "roles": ["ops", "systems", "compliance"],
    "checklist_ref": "../POLICIES/review_checklist.md"
  },

  "metadata": {
    "config_version": "1.2.0",
    "owners": ["ops", "systems", "compliance"],
    "change_control": "changelog_required"
  }
}
